#include <iostream>
#include <string>
using namespace std;

class Stack {
    char arr[100];
    int top;
public:
    Stack() { top = -1; }
    void push(char c) { if(top < 99) arr[++top] = c; }
    char pop() { if(top >= 0) return arr[top--]; return '\0'; }
    bool empty() { return top == -1; }
};

int main() {
    string word = "BORROWROB";
    Stack s;
    for(int i=0;i<word.length();i++) s.push(word[i]);
    string rev="";
    while(!s.empty()) rev += s.pop();
    cout<<"Original: "<<word<<"\n";
    cout<<"Reversed: "<<rev<<"\n";
    if(word == rev) cout<<"It is a palindrome\n";
    else cout<<"Not a palindrome\n";
    return 0;
}
